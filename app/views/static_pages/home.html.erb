<%= form_tag("/guess", method: "post") do %>
  <%= label_tag(:q, "Type the word:") %>
  <%= text_field_tag(:q, nil, :autocomplete => 'off', :autofocus => true, :spellcheck => 'false') %>
  <%= hidden_field_tag(:answer, @word) %>
  <%= submit_tag("Done") %>
<% end %>
